<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:layout_margin="10dp"
        >

    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:weightSum="3"
                  android:layout_marginTop="5dip" android:layout_marginBottom="5dip">
        <Button android:id="@+id/leftButton" android:layout_height="wrap_content" android:layout_width="wrap_content"
                android:text="LEFT" android:layout_weight="1"/>
        <Button android:id="@+id/middleButton" android:layout_height="wrap_content" android:layout_width="wrap_content"
                android:text="MIDDLE" android:layout_weight="1"/>
        <Button android:id="@+id/rightButton" android:layout_height="wrap_content" android:layout_width="wrap_content"
                android:text="RIGHT" android:layout_weight="1"/>
    </LinearLayout>

    <!--<include layout="@layout/winamp_layout" android:layout_width="match_parent"  android:layout_height="match_parent" />  -->


    <RadioGroup android:layout_height="wrap_content" android:layout_width="fill_parent"
                android:orientation="horizontal" android:gravity="center">
        <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content"  android:button="@drawable/radio_pager"
                     android:id="@+id/radioButton1" />
        <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content"  android:button="@drawable/radio_pager"
                     android:id="@+id/radioButton2"/>
        <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content"  android:button="@drawable/radio_pager"
                     android:id="@+id/radioButton3"/>
        <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content"  android:button="@drawable/radio_pager"
                     android:id="@+id/radioButton4"/>
    </RadioGroup>

    <android.support.v4.view.ViewPager android:id="@+id/viewPager"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
            />
</LinearLayout>

